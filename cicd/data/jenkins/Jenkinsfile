pipeline {
    agent any

    environment {
    }

    stages {
        stage('test') {
            steps {
                x = 'hello'
                echo "Testing from ${env.BRANCH_NAME}"
                echo "dash pass is ${x}"
            }
        }
        stage('deploy') {
            when {
                expression { env.BRANCH_NAME == 'master' }
            }
            steps {
                echo "Deploying from ${env.BRANCH_NAME}"
                sh "chmod +x ./cicd/data/jenkins/tyk-sync"
                sh "./cicd/data/tyk-sync sync -d http://e2-tyk-dashboard:3000 -s abc -p ./cicd/data/tyk-sync"
            }
        }
    }

    post {
        always {
            deleteDir()
        }
    }
}